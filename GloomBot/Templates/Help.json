{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "text": "Need some help?  Sure!  Here are the things I can help you with!"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 35,
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "battle goal",
                  "data": {
                    "cardResponse": "battleGoalRequest"
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": 65,
          "items": [
            {
              "type": "TextBlock",
              "text": "By saying 'battle goal', I'll get you two random battle goals.  If you mention anyone else, I'll send two to them as well.",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 35,
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "city",
                  "data": {
                    "cardResponse": "event",
                    "eventType": "city"
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": 65,
          "items": [
            {
              "type": "TextBlock",
              "text": "By saying 'city', I'll respond with a city event.  If you specify the number, I'll get that event.  If not, I'll give you a chance to tell me which one you want.",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 35,
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "road",
                  "data": {
                    "cardResponse": "event",
                    "eventType": "road"
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "width": 65,
          "items": [
            {
              "type": "TextBlock",
              "text": "By saying 'road', I'll respond with a road event.  If you specify the number, I'll get that event.  If not, I'll give you a chance to tell me which one you want.",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 35,
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "item",
                  "data": {
                    "cardResponse": "item"
                  }
                }
              ]
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": 65,
          "items": [
            {
              "type": "TextBlock",
              "text": "By saying 'item', I'll respond with an item.  If you specify the number, I'll get that exact item. If not, I'll give you a chance to tell me which one you want.",
              "wrap": true
            }
          ]
        }
      ]
    }
  ]
}